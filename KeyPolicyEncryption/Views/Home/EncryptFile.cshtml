@{
}

@model KeyPolicyEncryption.Models.EncryptionParameters;

<script type="text/javascript" src="~/js/jquery-3.3.1.min.js"></script>


<div class="row">
    <div class="col col-8">
        @if (ViewBag.messageID == 1)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }
        
        @if(ViewBag.messageID == 2)
        {
            
            <div id="alert2" class="alert alert-warning">@ViewBag.Message</div>
        }

            <form asp-action="SaveData" method="post">
                <h2>@ViewBag.time</h2>
                <h2>@ViewBag.Mem</h2>
                <label for="key">Primary Key</label>
                <input type="text" class="form-control" name="key" value="@ViewBag.Pk" readonly />

                <label for="key">Master Key</label>
                <input type="text" class="form-control" name="key" value="@ViewBag.MK" readonly />

                <label>Encrypted Data</label>
                <textarea class="form-control" cols="55" rows="10" readonly>@ViewBag.CipherText</textarea>
                @Html.Hidden("cipher", (object)ViewBag.CipherText)
                @Html.Hidden("filepath", (object)ViewBag.filepath)
                <br />

                <button class="btn btn-outline-warning" type="submit">Save</button>
            </form>



    </div>
</div>

<style>
    #content {
        /*box-shadow: 2px 2px 2px #ccc;*/
    }
</style>

<script >
    var WarningMessage = document.getElementById("#alert2");
    setTimeout(() => {
        WarningMessage.style.display = "none";
    }, 3000)

</script>

